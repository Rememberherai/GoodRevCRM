# ===========================================
# GoodRev CRM - Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in the values

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT_ID/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenRouter AI Configuration
# Get this from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key

# FullEnrich Integration (for data enrichment)
# Get this from: https://fullenrich.com/dashboard
FULLENRICH_API_KEY=your_fullenrich_api_key
FULLENRICH_WEBHOOK_SECRET=your_fullenrich_webhook_secret

# Gmail API Integration (for email sequences)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application URL (for OAuth callbacks, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Telnyx VoIP Integration (for click-to-dial calling)
# Get these from: https://portal.telnyx.com
TELNYX_API_KEY=KEY_your_telnyx_v2_api_key
TELNYX_WEBHOOK_SECRET=your_telnyx_webhook_signing_secret
# Encryption key for Telnyx API keys in database (generate with: openssl rand -hex 32)
TELNYX_ENCRYPTION_KEY=your_64_character_hex_encryption_key
# Set to true in development to skip webhook signature verification
# SKIP_WEBHOOK_VERIFICATION=true

# Optional: Email tracking pixel domain
# TRACKING_DOMAIN=track.yourdomain.com
